<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Disconnected"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/hostInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PC Host (IP)" />

    <EditText
        android:id="@+id/portInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Port"
        android:inputType="number" />

    <EditText
        android:id="@+id/tokenInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Auth Token" />

    <EditText
        android:id="@+id/qrPayloadInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Paste QR payload JSON"
        android:lines="3" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect" />

    <Button
        android:id="@+id/toggleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toggle Auto-Accept" />

    <Button
        android:id="@+id/startQueueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Queue" />

    <Button
        android:id="@+id/stopQueueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Queue" />

</LinearLayout>
